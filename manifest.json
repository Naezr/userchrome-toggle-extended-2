{
	"manifest_version": 2,
	"name": "Userchrome Toggle Extended",
	"version": "2.0",
	"description": "Allows you to toggle css styles on the fly",
  
	"icons": {
		"48": "icons/uct-logo.svg"
	},

	"browser_specific_settings": {
		"gecko": {
			"id": "userchrome-toggle-extended@n2ezr.ru"
		}
	},

	"browser_action": {
		"default_title": "Toggle css style",
		"default_icon": "icons/uct-alt-logo.svg",
		"default_area": "navbar"
	},
  
	"background": {
		"scripts": ["uct-background.js"],
		"persistent": true
	},

	"options_ui": {
		"page": "options/options.html"
	},

	"permissions": [
		"storage"
	],

	"commands": {
		"1": {
			"suggested_key": {
				"default": "Ctrl+Shift+1"
			},
			"description": "Toggle style 1"
		},
		"2": {
			"suggested_key": {
				"default": "Ctrl+Shift+2"
			},
			"description": "Toggle style 2"
		},
		"3": {
			"suggested_key": {
				"default": "Ctrl+Shift+3"
			},
			"description": "Toggle style 3"
		},
		"4": {
			"suggested_key": {
				"default": "Ctrl+Shift+4"
			},
			"description": "Toggle style 4"
		},
		"5": {
			"suggested_key": {
				"default": "Ctrl+Shift+5"
			},
			"description": "Toggle style 5"
		},
		"6": {
			"suggested_key": {
				"default": "Ctrl+Shift+6"
			},
			"description": "Toggle style 6"
		}
		
	}
}